#!/bin/bash

# simple system managment programs, organized

declare -a programs=(
    "btop"
    "nmtui"
    "bluetui"
    "battop"
)

choice=$(printf '%s\n' "${programs[@]}" | dmenu -vi -g 1 -l 20 -i -p "program :") || exit

FONTSIZE=8.5
if [ $(hostname) == "yoshipad" ]; then FONTSIZE=14; fi
st -f "monospace:size=$FONTSIZE" -c $choice -e $choice
