#!/bin/sh

# Simple dmenu power menu

choice=$(printf "lock\nsuspend\nshutdown\nreboot" | dmenu -i -vi -g 1)

case "$choice" in
    lock)
        sleep 0.1; slock
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    sleep)
        sleep 0.1; /usr/bin/systemctl suspend
        ;;
    *)
        ;;
esac

