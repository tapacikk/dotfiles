#!/bin/bash
#
#
#BAR TIME


cpu() {
  cpu_val=$(grep -o "^[^ ]*" /proc/loadavg)

  printf "CPU"
  printf " $cpu_val"
}


mem() {
  printf "  "
  printf "$(free -h | awk '/^Mem/ { print $3 }' | sed s/i//g)"
}


clock() {
	printf "| 󱑆 "
	printf "$(date '+%H:%M')"
}

while true; do
  sleep 1 && xsetroot -name "$(cpu) $(mem) $(clock)"
done &

setxkbmap -option ctrl:nocaps
WALL=$(ls $HOME/.local/wall | shuf -n 1)
WALL=$HOME/.local/wall/$WALL
feh --bg-fill $WALL --no-fehbg
/opt/pywal16/bin/wal -i $WALL --cols16 lighten -n -s 
picom -b --corner-radius 10 --backend glx
xss-lock -- slock &
xset r rate 200 35
dunst &
exec dwm 
