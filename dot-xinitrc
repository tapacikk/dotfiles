#!/bin/bash

while true; do
   xsetroot -name "$(date '+[%a,%d-%b][%I:%M]')"
   sleep 1
done &


setxkbmap -option ctrl:nocaps
export WALL=$(ls /home/taras/.local/wall | shuf -n 1)
export WALL=/home/taras/.local/wall/$WALL
feh --bg-center $WALL
wal -i $WALL --cols16 -n
picom -b 
xss-lock -- slock &
exec dwm 

